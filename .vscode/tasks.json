{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "meson: setup",
            "type": "shell",
            "command": "meson",
            "args": [
                "setup",
                "builddir",
                "--native-file",
                "native.ini",
                "-Dbuildtype=debug",
                "-Dwarning_level=3"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "meson: compile (debug)",
            "type": "shell",
            "command": "meson",
            "args": [
                "compile",
                "-C",
                "builddir"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": [
                "meson: setup"
            ]
        },
        {
            "label": "meson: compile (release)",
            "type": "shell",
            "command": "meson",
            "args": [
                "compile",
                "-C",
                "builddir"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": [
                "meson: setup (release)"
            ]
        },
        {
            "label": "meson: setup (release)",
            "type": "shell",
            "command": "meson",
            "args": [
                "setup",
                "builddir",
                "--native-file",
                "native.ini",
                "-Dbuildtype=release",
                "-Dwarning_level=3",
                "--wipe"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "meson: clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "builddir"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "meson: reconfigure",
            "type": "shell",
            "command": "meson",
            "args": [
                "setup",
                "builddir",
                "--native-file",
                "native.ini",
                "--reconfigure"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
